{
  "name": "gitscope",
  "version": "1.0.0",
  "description": "Telegram bot that monitors GitHub for trending repos in the OpenClaw/Claude Code ecosystem",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "dev": "tsx --env-file=.env --watch src/index.ts",
    "dev:pretty": "tsx --env-file=.env src/index.ts | npx pino-pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrbarnaclebot-ux/GitScope.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrbarnaclebot-ux/GitScope/issues"
  },
  "homepage": "https://github.com/mrbarnaclebot-ux/GitScope#readme",
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "grammy": "^1.40.0",
    "node-cron": "^4.2.1",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
